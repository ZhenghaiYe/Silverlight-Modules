<UserControl x:Class="slModules.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1">
            <Button Content="Level 1" Click="Button_Click" />
            <Button Content="Level 2" Click="Button_Click_1" />
            <Button Content="Level 3" Click="Button_Click_2" />
            <Button Content="Level 4" Click="Button_Click_3" />
        </StackPanel>
        <Grid Background="Black" x:Name="LayoutRoot">
        	<TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Dynamically loading xap files using PRISM in Silverlight. Load a module by clicking the buttons on the left --->" VerticalAlignment="Top" Foreground="White"/>
        </Grid>
    </Grid>
  
</UserControl>
